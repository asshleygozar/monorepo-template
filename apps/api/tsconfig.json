{
	"compilerOptions": {
		"target": "es2023",
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"outDir": "dist",
		"rootDir": "src",
		"paths": {
			"#*": ["./src/*"]
		},
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"types": ["node"]
	},
	"include": ["src"],
	"exclude": ["dist"]
}
